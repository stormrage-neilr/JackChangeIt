<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sending the 6 digit activation code too..."
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/UsersEmailOrPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="10pt"
        android:layout_gravity="center"
        android:text="Users Email or Phone Number"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the code below:"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/etCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="10dp"
        android:maxLength="6"/>

    <Button
        android:id="@+id/bResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend Code"/>
    <Button
        android:id="@+id/bSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>
    <TextView
        android:id="@+id/tvConfirmationCodeError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="Error"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

</LinearLayout>
